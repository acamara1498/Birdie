<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.restclienttemplate.BeepDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/linlay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDetailsProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivDetailsProfile"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivDetailsProfile"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailsUserName"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="User's Name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvDetailsHandle"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Handle"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
